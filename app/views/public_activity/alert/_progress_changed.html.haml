- if activity.trackable
  .event
    .label
      = render 'public_activity/alert/progress_icons', progress: activity.parameters[:progress_after]
    .content
      .date
        = "#{format_time(activity.created_at)} geleden"
      .summary
        = link_to((activity.owner.full_name if activity.owner), '#')
        heeft
        = link_to alert_path(activity.trackable) do
          = activity.trackable.title
        op
        = link_to activity.parameters[:progress_after], alert_path(activity.trackable)
        gezet
- else
  /iets anders hier
