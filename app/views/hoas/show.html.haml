- @active_tab = 'hoa'

.small-1.column
  .ui.vertical.labeled.icon.menu

    %a.red.item
      %i.users.icon
      Leden

    %a.teal.item
      %i.settings.icon
      Opties

    %a.green.item
      %i.payment.icon
      Facturatie
.row
  


  .medium-11.small-11.column
    .ui.raised.segment
      %h1.ui.blue.header
        %i.users.icon
        .content
          = current_user.hoa_name
          .sub.header
            = "#{current_user.hoa.users.count} leden"

      .ui.horizontal.segment
        - if current_user.has_role?(:moderator, current_user.hoa) or current_user.admin
          = link_to new_user_invitation_path, id: 'new-member' do
            .ui.labeled.mini.icon.button
              %i.add.icon
              Nieuwe Leden

    .ui.raised.segment
      = render 'hoas/members'


