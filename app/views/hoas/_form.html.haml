= form_for(@hoa) do |f|
  - if @hoa.errors.any?
    #error_explanation
      %h2
        = pluralize(@hoa.errors.count, "error")
        prohibited this hoa from being saved:
      %ul
        - @hoa.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
