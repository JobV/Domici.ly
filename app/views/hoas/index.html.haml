%h1 Listing hoas
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @hoas.each do |hoa|
      %tr
        %td= hoa.name
        %td= link_to 'Show', hoa
        %td= link_to 'Edit', edit_hoa_path(hoa)
        %td= link_to 'Destroy', hoa, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Hoa', new_hoa_path
