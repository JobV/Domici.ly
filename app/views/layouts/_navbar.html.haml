- if signed_in?
  .row
    .small-12.medium-10.medium-centered.column
      .ui.secondary.pointing.menu
        %a.item{ href: '/', class: ('active' if @active_tab == 'home') }
          %i.home.icon
          / # = current_user.hoa_name
        - if admin?
          %a.item{ href: '/superadmin'}
            %i.settings.icon
            Admin
        .right.menu
          = link_to profile_path, class: (@active_tab == 'profile' ? 'active item' : 'item') do
            %i.user.icon
          = link_to destroy_user_session_path, class: 'item', method: :delete do
            %i.sign.out.icon

      - flash.each do |name, msg|
        - if name == 'notice'
          .ui.small.success.message
            %i.close.icon
            .content
              .header
                = msg
        - elsif name == 'alert'
          .ui.small.error.message
            %i.close.icon
            .content
              .header
                = msg
        - else
          .ui.small.warning.message
            %i.close.icon
            .content
              .header
                = msg
