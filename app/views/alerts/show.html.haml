.row
  .small-12.medium-10.medium-centered.column

    = render 'alerts/show_top', alert: @alert

    .ui.bottom.attached.segment
      %h1.ui.header
        = @alert.title
        .sub.header
          = "Geplaatst door #{@alert.user.name}"
          = " - #{format_time(@alert.created_at)} geleden"

      %p.alert
        = @alert.body

    .ui.buttons
      = link_to 'Terug', (request.referrer || root_path), class: 'ui button'
