= form_for(@alert) do |f|
  - if @alert.errors.any?
    #error_explanation
      %h2
        = pluralize(@alert.errors.count, "error")
        prohibited this alert from being saved:
      %ul
        - @alert.errors.full_messages.each do |msg|
          %li= msg
  .ui.form.segment
    .field
      %label
        = f.label 'Melding'
      .ui.left.labeled.icon.input
        = f.text_field :title, class: 'form-control input-lg'
    .field
      %label
        = f.label 'Details'
      = f.text_area :body, class: 'form-control input-lg'

    .ui.buttons
      = f.submit 'Publiceer melding', class: 'ui positive button'
      = link_to 'Annuleer', root_path, class: 'ui button'
