- @active_tab = 'home'

.row
  .large-10.medium-10.small-12.medium-centered.column
    .ui.feed.segment

      = link_to 'Nieuwe Melding', new_alert_path, class: 'ui small button'

      - if moderator?
        .ui.small.button
          Bestuurlijke Mededeling

      %br
      %br
      = form_for @post do |f|
        .ui.fluid.action.input
          = f.text_field :title, placeholder: 'Plaats een bericht', autofocus: true
          .ui.icon.button
            %i.level.down.icon
      
      - @activities.each do |activity|
        = render_activity activity
