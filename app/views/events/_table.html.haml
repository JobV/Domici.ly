%table.ui.basic.table.segment
  %thead
    %tr
      %th Tijd
      %th Onderwerp
      %th Locatie
      %th Acties

  %tbody
    - events.each do |event|
      %tr
        %td
          = format_time event.date

        %td
          = link_to event.name, event

        %td
          = event.location

        %td.right
          = link_to edit_event_path(event) do
            %i.black.ellipsis.horizontal.icon
          = link_to event, method: :delete, data: { confirm: 'Weet je zeker dat je deze melding wilt verwijderen?' } do
            %i.black.remove.icon
