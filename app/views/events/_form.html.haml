= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .ui.form
    .field
      %label
        = f.label :date
      = f.datetime_select :date
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :location
      = f.text_field :location
    .actions
      = f.submit 'Save'
